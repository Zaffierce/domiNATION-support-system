<%- include('../../partials/head.ejs'); %>
  <title>User: <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<link rel="stylesheet" type="text/css" href="../../styles/forms.css">
<script src="/js/app.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../partials/nav.ejs'); %>
    <div class="container">
        <div class="row greybox">
          <div class="col infobox">
            <div>
              <strong>Submitted on:</strong> <%= ticket.submitted_on %><br />
              <strong>Status:</strong> <%= ticket.status %><br />
              <strong>Username:</strong> <%= ticket.ign %><br />
              <strong>Discord ID:</strong> <%= ticket.discord_name %><br />
              <strong>Email Address: </strong><%= ticket.email_address %><br />
              <br />
              <br />
              <strong>Dropoff Location:</strong> <%= ticket.server_dropoff_location %><br />
              <strong>Dinosaur choice:</strong> <%= ticket.dino_name %><br />
              <strong>Sex:</strong> <%= ticket.sex %><br />
              <% if (ticket.colored === 'no') { %>
                <strong>Colored: </strong> <%= ticket.colored %><br />
              <% } else { %>
                <strong>Colored:</strong> <%= ticket.colored %><br />
                <strong>Region 0:</strong> <%= ticket.region0 %><br />
                <strong>Region 1:</strong> <%= ticket.region1 %><br />
                <strong>Region 2:</strong> <%= ticket.region2 %><br />
                <strong>Region 3:</strong> <%= ticket.region3 %><br />
                <strong>Region 4:</strong> <%= ticket.region4 %><br />
                <strong>Region 5:</strong> <%= ticket.region5 %><br />
              <% } %>

            </div>
            <br />
            <div class="text-center">
              <div class="row">
              <% if (user.isAdmin && ticket.status === "NEW") { %>
                <div class="col-sm-6">
                  <form method="POST" action="/cancel/4/<%=ticket.id%>">
                    <input type="submit" class="btn btn-danger btn-lg" value="Cancel ticket">
                  </form>
                </div>
                  <form method="POST" action="/complete/4/<%=ticket.id%>">
                    <input type="submit" class="btn btn-success btn-lg" value="Complete ticket">
                  </form>
                </div>
              <% } else if (ticket.status === "NEW") { %>
                <div class="col">
                  <form method="POST" action="/cancel/4/<%=ticket.id%>">
                    <input type="submit" class="btn btn-danger btn-lg" value="Cancel ticket">
                  </form>
                </div>
              <% } else { %>
                <div class="col">
                  This ticket has been closed.
                </div>
              <% } %>
            </div>
          </div>
        </div>
    </div>
</div> <!--Close of content-->

</body>
</html>