<%- include('../../partials/head.ejs'); %>
  <title>User: <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<link rel="stylesheet" type="text/css" href="../../styles/forms.css">
<script src="/js/app.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../partials/nav.ejs'); %>
  <br />
  <div class="container">
    <div class="row">
      <div class="col-x1-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4 panel-body">
        <h1 class="ng-scope text-center">Submit an anonymous ticket</h1>
        <div class="px-2">
          <form class="needs-validation justify-content-center" novalidate action="ticket-submit" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="typeOfRequest" value="Anonymous" hidden>
              <label for="description">Please enter into the box below:</label>
              <div class="note">Note: Despite being logged into the website, this submission is 100% anonymous and <strong>cannot</strong> be traced back to you. As a result of this, once submitted, you will not be able to see any details, nor receive any updates for this ticket. Please use this option as a means to improve our community.</div>
              <textarea class="form-control" id="description" name="description" rows="10" required></textarea>
              <div class="invalid-feedback">Please fill in this section please.</div>
            </div>
            <div class="text-center">
              <input type="submit" value="Submit Ticket">
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>
</div> <!--Close of content-->

</body>
</html>