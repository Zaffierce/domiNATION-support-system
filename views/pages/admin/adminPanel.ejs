<%- include('../../partials/head.ejs'); %>
  <title>User: <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
<script src="/js/app.js" type="text/javascript"></script>
<script src="/js/adminPanel.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../partials/nav.ejs'); %>
  <h1 class="ng-scope text-center">Administrative Panel</h1>
  <br />
  <div class="container">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="server-list-tab" data-toggle="tab" role="tab" href="#serverTab" aria-controls="serverlist" aria-selected="true">Server List</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="dino-list-tab" data-toggle="tab" role="tab" href="#dinoTab" aria-controls="dinolist" aria-selected="false">Dinosaur List</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="dino-color-tab" data-toggle="tab" role="tab" href="#dinoColorTab" aria-controls="dinocolors" aria-selected="false">Dinosaur Colors</a>
      </li>
    </ul>
    
    <div class="tab-content">
      <div class="tab-pane active" id="serverTab" role="tabpanel" aria-labelledby="server-list-tab">
        <h1>Server Listing</h1>
        <table class="table table-striped col-lg-8">
          <tbody class="table-body">
            <tr>
              <th>Full Name</th>
              <th>Server Name</th>
              <th>Server Number</th>
            </tr>
            <tr class="ng-scope">
              <td>
                <a class="add-server fas fa-plus h4"
                  href="#"
                  tabindex="-1"
                  role="button"
                  data-toggle="modal"
                  data-target="#addServerModal"> Add a new server
                </a>
              </td>
            </tr>
            <% for (let i = 0; i < servers.length; i++) { %>
              <tr class="ng-scope">
                <td>
                  <a class="edit-server" 
                    href="#" 
                    tabindex="-1" 
                    role="button" 
                    data-toggle="modal" 
                    data-target="#editServerModal" 
                    data-serverid="<%=servers[i].server_id%>"
                    data-actualserverid="<%=servers[i].id%>"
                    data-servername="<%=servers[i].server_name%>">
                    DomiNATION #<%=servers[i].server_id%> - <%=servers[i].server_name%>
                  </a>
                </td>
                <td><%=servers[i].server_name%></td>
                <td><%=servers[i].server_id%></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="tab-pane" id="dinoTab" role="tabpanel" aria-labelledby="dino-list-tab">
        <h1>Dinosaur Listing</h1>
        <table class="table table-striped col-lg-10">
          <tbody class="table-body">
            <tr>
              <th>Dino Name</th>
              <th>Spawn Code</th>
              <th>Max Wild Level</th>
              <th>Imprint Status</th>
            </tr>
            <tr class="ng-scope">
              <td>
                <a class="add-dinosaur fas fa-plus h4"
                  href="#"
                  tabindex="-1"
                  role="button"
                  data-toggle="modal"
                  data-target="#addDinosaurModal"> Add a new dinosaur
                </a>
              </td>
            </tr>
            <% for (let i = 0; i < dino_names.length; i++) { %>
              <tr class="ng-scope">
                <td>
                  <a class="edit-dinosaur"
                    href="#"
                    tabindex="-1"
                    role="button"
                    data-toggle="modal"
                    data-target="#editDinosaurModal"
                    data-dinoid="<%=dino_names[i].id%>"
                    data-dinospawn="<%=dino_names[i].spawn%>"
                    data-dinolvl="<%=dino_names[i].lvl%>"
                    data-dinoname="<%=dino_names[i].name%>"
                    data-dinoimprint="<%=dino_names[i].imprint%>">
                  <%=dino_names[i].name%>
                  </a>
                </td>
                <td><%=dino_names[i].spawn%></td>
                <td><%=dino_names[i].lvl%></td>
                <td><%=dino_names[i].imprint%></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="tab-pane" id="dinoColorTab" role="tabpanel" aria-labelledby="dino-color-tab">
        <h1>Dinosaur Color Listing</h1>
        <table class="table table-striped col-lg-6">
          <tbody class="table-body">
            <tr>
              <th>Color Name</th>
              <th>Ark Color ID</th>
              <th>HEX Code</th>
            </tr>
            <tr class="ng-scope">
              <td>
                <a class="add-dino-color fas fa-plus h4"
                  href="#"
                  tabindex="-1"
                  role="button"
                  data-toggle="modal"
                  data-target="#addDinosaurColorModal"> Add a new color
                </a>
              </td>
            </tr>
            <% for (let i = 0; i < dino_colors.length; i++) { %>
              <tr class="ng-scope">
                <td>
                  <a class="edit-dinosaur-color"
                  href="#"
                  tabindex="-1"
                  role="button"
                  data-toggle="modal"
                  data-target="#editDinosaurColorModal"
                  data-colorid="<%=dino_colors[i].id%>"
                  data-dinocolorid="<%=dino_colors[i].color_id%>"
                  data-dinocolorname="<%=dino_colors[i].color_name%>"
                  data-dinocolorhex="<%=dino_colors[i].color_hex%>">
                  <%=dino_colors[i].color_name%>
                  </a>
                </td>
                <td><%=dino_colors[i].color_id%></td>
                <td>#<%=dino_colors[i].color_hex%></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="modal fade" id="addServerModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Server</h5>
            <button type="button" class="close" data-dismiss="modal" area-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="needs-validation justify-content-center" novalidate method="POST" action="/add" id="add-server-form">
              <div class="form-group">
                <label for="server_id">Server Number:</label>
                <input class="form-control" id="addServerModal-server_id" name="server_id" type="number" value="" required />
                  <div class="invalid-feedback">Please enter a valid Server Number.</div>
              </div>
              <div class="form-group">
                <label for="server_name">Server Name:</label>
                <input type="text" class="form-control" id="addServerModal-server_name" name="server_name" value="" required />
                  <div class="invalid-feedback">Please enter a valid Server Name.</div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="submit" form="add-server-form" class="btn btn-success">Save</button>
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="editServerModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Server</h5>
            <button type="button" class="close" data-dismiss="modal" area-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="needs-validation justify-content-center" novalidate method="POST" action="/edit" id="edit-server-form">
              <div class="form-group">
                <label for="server_id">Server Number:</label>
                <input type="number" class="form-control" id="editServerModal-server_id" name="server_id" value="" required />
                  <div class="invalid-feedback">Please enter a valid Server Number.</div>
                <input class="form-control" id="editServerModal-actual_server_id" name="actual_server_id" type="number" value="" hidden />
              </div>
              <div class="form-group">
                <label for="server_name">Server Name:</label>
                <input type="text" class="form-control" id="editServerModal-server_name" name="server_name" value="" required/>
                  <div class="invalid-feedback">Please enter a valid Server Name.</div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <form class="justify-content-center" method="POST" action="/remove" id="delete-server-form">
              <input id="editServerModal-remove_server_id" name="server_id" value="" hidden>
            </form>
            <button type="submit" form="edit-server-form" class="btn btn-success">Save</button>
            <button type="submit" form="delete-server-form" class="btn btn-danger delete">Delete</button>
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
          </div>
        </div>
      </div>
    </div>
      
    <div class="modal fade" id="addDinosaurModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Dinosaur</h5>
            <button type="button" class="close" data-dismiss="modal" area-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="needs-validation justify-content-center" novalidate method="POST" action="/add" id="add-dinosaur-form">
              <div class="form-group">
                <label for="dino_name">Dino name:</label>
                <input class="form-control" id="addDinosaurModal-dino_name" name="dino_name" type="text" required />
                <div class="invalid-feedback">Please enter a valid Dinosaur Name.</div>
              </div>
              <div class="form-group">
                <label for="dino_spawn">Spawn code:</label>
                <input class="form-control" id="addDinosaurModal-dino_spawn" name="dino_spawn" type="text" required />
                <div class="invalid-feedback">Please enter a valid Dinosaur Spawn Code.</div>
              </div>
              <div class="form-group">
                <label for="dino_lvl">Max wild lvl:</label>
                <input class="form-control" id="addDinosaurModal-dino_lvl" name="dino_lvl" type="number" required />
                  <div class="invalid-feedback">Please enter a valid Dinosaur Wild Level.</div>
              </div>
              <div class="form-group">
                <label for="dino_imprint">Can imprint:</label>
                <select class="form-control" name="dino_imprint" id="addDinosaurModal-dino_imprint">
                  <option value="true">True</option>
                  <option value="false">False</option>
                </select>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="submit" form="add-dinosaur-form" class="btn btn-success">Save</button>
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
          </div>
        </div>
      </div>
    </div>
  
    <div class="modal fade" id="editDinosaurModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Dinosaur</h5>
            <button type="button" class="close" data-dismiss="modal" area-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="needs-validation justify-content-center" novalidate method="POST" action="/edit" id="edit-dinosaur-form">
              <div class="form-group">
                <label for="dinosaur_name">Dinosaur Name:</label>
                <input type="text" class="form-control" id="editDinosaurModal-dino_name" name="dino_name" value="" required />
                  <div class="invalid-feedback">Please enter a valid Dinosaur Name.</div>
                <input class="form-control" id="editDinosaurModal-actual_dino_id" name="dino_id" type="number" value="" hidden />
              </div>
              <div class="form-group">
                <label for="editDinosaurModal-dino_spawn">Spawn code:</label>
                <input class="form-control" id="editDinosaurModal-dino_spawn" name="dino_spawn" type="text" value="" required />
                  <div class="invalid-feedback">Please enter a valid Dinosaur Spawn Code.</div>
              </div>
              <div class="form-group">
                <label for="editDinosaurModal-dino_lvl">Max wild lvl:</label>
                <input class="form-control" id="editDinosaurModal-dino_lvl" name="dino_lvl" type="number" value="" required />
                <div class="invalid-feedback">Please enter a valid Dinosaur Wild Level.</div>
              </div>
              <div class="form-group">
                <label for="editDinosaurModal-dino_imprint">Can imprint:</label>
                <select class="form-control" id="editDinosaurModal-dino_imprint" name="dino_imprint">
                  <option value="true" selected>true</option>
                  <option value="false">false</option>
                </select>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <form class="justify-content-center" method="POST" action="/remove" id="delete-dinosaur-form">
              <input id="editDinosaurModal-remove_dino_id" name="dino_id" value="" hidden>
            </form>
            <button type="submit" form="edit-dinosaur-form" class="btn btn-success">Save</button>
            <button type="submit" form="delete-dinosaur-form" class="btn btn-danger delete">Delete</button>
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
          </div>
        </div>
      </div>
    </div>
      
    <div class="modal fade" id="addDinosaurColorModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Add Dinosaur Color</h5>
            <button type="button" class="close" data-dismiss="modal" area-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="needs-validation justify-content-center" novalidate method="POST" action="/add" id="add-dinosaur-color-form">
              <div class="form-group">
                <label for="dinosaur_color_id">Color ID:</label>
                <input class="form-control" id="addDinosaurColorModal-dino_color_id" name="dino_color_id" type="number" value="" required />
                  <div class="invalid-feedback">Please enter a valid Color ID.</div>
              </div>
              <div class="form-group">
                <label for="dinosaur_color_name">Color Name:</label>
                <input class="form-control" id="addDinosaurColorModal-dino_color_name" name="dino_color_name" type="text" value="" required />
                  <div class="invalid-feedback">Please enter a valid Color Name.</div>
              </div>
              <div class="form-group">
                <label for="dinosaur_color_hex">Hex Code:</label>
                <input class="form-control" id="addDinosaurColorModal-dino_color_hex" name="dino_color_hex" type="text" value="" required/>
                  <div class="invalid-feedback">Please enter a valid HEX Code.</div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="submit" form="add-dinosaur-color-form" class="btn btn-success">Save</button>
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
          </div>
        </div>
      </div>
    </div>
  
    <div class="modal fade" id="editDinosaurColorModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Edit Dinosaur Color</h5>
            <button type="button" class="close" data-dismiss="modal" area-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="needs-validation justify-content-center" novalidate method="POST" action="/edit" id="edit-dinosaur-color-form">
              <div class="form-group">
                <label for="dinosaur_color_id">Color ID:</label>
                <input class="form-control" id="editDinosaurColorModal-dino_color_id" name="dino_color_id" type="number" value="" required />
                  <div class="invalid-feedback">Please enter a valid Color ID.</div>
                <input id="editDinosaurColorModal-actual_color_id" name="actual_color_id" type="number" value="" hidden />
              </div>
              <div class="form-group">
                <label for="dinosaur_color_name">Color Name:</label>
                <input class="form-control" id="editDinosaurColorModal-dino_color_name" name="dino_color_name" type="text" value="" required />
                  <div class="invalid-feedback">Please enter a valid Color Name.</div>
              </div>
              <div class="form-group">
                <label for="dinosaur_color_hex">Hex Code:</label>
                <input class="form-control" id="editDinosaurColorModal-dino_color_hex" name="dino_color_hex" type="text" value="" required/>
                  <div class="invalid-feedback">Please enter a valid HEX Code.</div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <form class="justify-content-center" method="POST" action="/remove" id="delete-dinosaur-color-form">
              <input id="editDinosaurColorModal-remove_dino_color_id" name="dino_color_id" value="" hidden>
            </form>
            <button type="submit" form="edit-dinosaur-color-form" class="btn btn-success">Save</button>
            <button type="submit" form="delete-dinosaur-color-form" class="btn btn-danger delete">Delete</button>
            <a href="#" class="btn btn-secondary" data-dismiss="modal">Close</a>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="successModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content justify-content-center">
          <div class="modal-body text-center">
            <h5>Record has been saved.</h3>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="errorModal" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content justify-content-center">
          <div class="modal-body text-center">
            <h5>An error has occurred while attempting to save this record.</h3>
          </div>
        </div>
      </div>
    </div>

  </div>

  <!--Close Content-->
  </div>
</body>
</html>