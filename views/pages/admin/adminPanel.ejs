<%- include('../../partials/head.ejs'); %>
  <title>User: <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
<script src="/js/app.js" type="text/javascript"></script>
</head>
<body>
    <%- include('../../partials/nav.ejs'); %>
  <h1 class="ng-scope text-center">Administrative Panel</h1>
  <br />
  <br />
  <div class="container">
    <div class="infobox greybox">
      <div class="row">
        <div class="col-sm-3">
          <span class="border-bottom border-dark"><strong>Admin Panel</strong></span>
          <br />
          <div>
            <div class="ap_nav" id="serverList">Server Listing</div>
            <div class="ap_nav" id="dinosaurList">Dinosaur Listing</div>
            <div class="ap_nav" id="dinosaurColors">Dinosaur Colors</div>
          </div>
        </div>
        <div class="col-sm-9 admincontainer">
          <div id="about" text-center>
            <p>This page is still under construction, so things may changed a bit as we go on.</p>
          </div>
          <div id="serverListing" hidden>
            <!--Server Listing-->
            <div class="add-server-div">
              <button class="fas fa-plus add-server"></button>
              Add a server
            </div>
            <form action="/add" method="POST" class="add-server-form" hidden>
              <button class="fas fa-save confirm-add-server"></button>
              <button class="fas fa-ban cancel-add-server"></button>
              <label for="server_id">Server Number:</label>
              <input name="server_id" type="number"  style="width:2.5em" />
              <label for="server_name">Server Name:</label>
              <input name="server_name" type="text"/>
            </form>
            <% for (let i = 0; i < servers.length; i++) { %>
              <div class="pb-1">
                <form action="/edit" method="POST" class="edit-server-form" hidden>
                  <button class="fas fa-save save-server"></button>
                  <button class="fas fa-ban cancel-server"></button>
                  <label for="server_id">Server Number:</label>
                  <input name="server_id" type="number" value="<%=servers[i].server_id%>" style="width:2.5em" />
                  <input name="id" type="number" value="<%=servers[i].id%>" hidden/>
                  <label for="server_name">Server Name:</label>
                  <input name="server_name" type="text" value="<%=servers[i].server_name%>"/>
                </form>
                <form action="/remove" method="POST" class="delete-server-form">
                  <input name="server_id" type="hidden" value="<%=servers[i].server_id%>" />
                  <button class="fas fa-edit edit-server"></button>
                  <button class="fas fa-trash delete-server"></button>
                  DomiNATION #<%=servers[i].server_id%> - <%=servers[i].server_name%>
                </form>
              </div>
            <% } %>
          </div>
          <div id="dinosaurListing" hidden>
            <!--Dinosaur Listing-->
            <div class="add-dinosaur-div">
              <button class="fas fa-plus add-dinosaur"></button>
              Add a new dinosaur
            </div>
            <form action="/add" method="POST" class="add-dinosaur-form" hidden>
              <button class="fas fa-save confirm-add-dinosaur"></button>
              <button class="fas fa-ban cancel-add-dinosaur"></button>
              <label for="dino_name">Dino Name:</label>
              <input name="dino_name" type="text"/>
            </form>
            <% for (let i = 0; i < dino_names.length; i++) { %>
            <div class="pb-1">
              <form action="/edit" method="POST" class="edit-dinosaur-form" hidden>
                <button class="fas fa-save save-dinosaur"></button>
                <button class="fas fa-ban cancel-dinosaur"></button>
                <label for="dino_name">Dino Name:</label>
                <input name="dino_id" type="hidden" value="<%=dino_names[i].id%>" />
                <input name="dino_name" type="text" value="<%=dino_names[i].name%>" />
              </form>
              <form action="/remove" method="POST" class="delete-dinosaur-form">
                <input name="dino_id" type="hidden" value="<%=dino_names[i].id%>" />
                <button class="fas fa-edit edit-dinosaur"></button>
                <button class="fas fa-trash delete-dinosaur"></button>
                <%= dino_names[i].name %>
              </form>
            </div>
            <% } %>
          </div>
          <div id="dinosaurColorListing" hidden>
            <!--Dinosaur Colors-->
            <div class="add-dinosaur-color-div">
              <button class="fas fa-plus add-dinosaur-color"></button>
              Add a new dinosaur color
            </div>
            <form action="/add" method="POST" class="add-dinosaur-color-form" hidden>
              <button class="fas fa-save confirm-add-dinosaur-color"></button>
              <button class="fas fa-ban cancel-add-dinosaur-color"></button>
              <label for="dino_color_id">Color #:</label>
              <input name="dino_color_id" type="number" style="width:3em" />
              <label for="dino_color_name">Color Name:</label>
              <input name="dino_color_name" type="text"/>
              <label for="dino_color_hex">Hex Code:</label>
              <input name="dino_color_hex" type="text" style="width:3.5em"/>
            </form>
            <% for (let i = 0; i < dino_colors.length; i++) { %>
              <div class="pb-1">
                <form action="/edit" method="POST" class="edit-dinosaur-color-form" hidden>
                  <button class="fas fa-save save-dinosaur-color"></button>
                  <button class="fas fa-ban cancel-dinosaur-color"></button>
                  <label for="dino_color_id">Color #:</label>
                  <input name="dino_color_id" type="number" value="<%=dino_colors[i].color_id%>" style="width:3em" />
                  <label for="dino_color_name">Color Name:</label>
                  <input name="dino_color_name" type="text" value="<%=dino_colors[i].color_name%>" />
                  <label for="dino_color_hex">Hex Code:</label>
                  <input name="dino_color_hex" type="text" value="<%=dino_colors[i].color_hex%>" style="width:3.5em" />
                  <input name="id" value="<%=dino_colors[i].id%>" hidden>
                </form>
                <form action="/remove" method="POST" class="delete-dinosaur-color-form">
                  <input name="color_id" type="hidden" value="<%=dino_colors[i].id%>" />
                  <button class="fas fa-edit edit-dinosaur-color"></button>
                  <button class="fas fa-trash delete-dinosaur-color"></button>
                  <%= dino_colors[i].color_name %>
                </form>
              </div>
              <% } %>
          </div>
        </div>
      </div>
    </div>    
  </div> <!--End of container-->
      
    

</div> <!--Close of content-->

</body>
</html>