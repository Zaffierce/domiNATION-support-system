  <form class="needs-validation" novalidate action="form_submit" method="POST">
    <%- include('../../partials/completedGeneralTicket.ejs'); %>
    <div class="form-row">
      <legend>Submit a bug report</legend>
      <div class="form-group col-md-6">
          <label for="issue">Please tell us your issue:</label>
          <input type="text" name="issue" class="form-control" required>

          <label for="recreate">Are you able to re-create this?  If so, how?</label>
          <input type="text" name="recreate" class="form-control">

          <label for="lost_items">Did you lose any items due to this?
            <div class="warning">***Note:  Only items that you have proof of ownership may be reclaimed! (i.e. screenshots of your inventory)***</div>
          </label>
          <input type="text" name="lost_items" class="form-control">

        </fieldset>
      </div>

    </div>
    <input type="submit" value="Click to Submit">
  </form>
