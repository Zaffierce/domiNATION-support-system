<%- include('../../partials/head.ejs'); %>
  <title>Submit a new Ticket : <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<%- include('../../partials/css.ejs'); %>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" type="text/javascript"></script>
<script src="/js/app.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../partials/nav.ejs'); %>
  <br>
  <br>
  <br>
  <form class="needs-validation" novalidate action="form_submit" method="POST">
    <%- include('../../partials/completedGeneralTicket.ejs'); %>
  <div class="form-group col-md-6" hidden>
    <label for="ticketType">What do you need help with?</label>
    <select name="ticketType" class="form-control" id="generalTicketSelect" required>
      <option value="<%= generalInfo.ticketType %>"></option>
    </select>
    <div class="invalid-feedback">Please choose a ticket type.</div>
  </div>
    <div class="form-row">
      <legend>Transfer Element:</legend>
      <div class="form-group col-md-6">
          <label for="transfer_amount">How much element do you wish to transfer?</label>
          <input type="number" name="transfer_amount" class="form-control" required>

          <label for="serverid_pickup">Which server do you wish to transfer FROM?</label>
          <select name="serverid_pickup" class="form-control" id="serverid_pickup" required>
          <%- include('../../partials/serverList.ejs'); %>
          </select>

          <label for="server_pickup_location">Specific pickup location & PIN code:</label>
          <input type="text" name="server_pickup_location" class="form-control" required>


          <label for="serverid_dropoff">Which server do you wish to transfer TO?</label>
          <select name="serverid_dropoff" class="form-control" id="serverid_dropoff" required>
          <%- include('../../partials/serverList.ejs'); %>
          </select>

          <label for="server_dropoff_location">Specific drop-off location & PIN code:</label>
          <input type="text" name="server_dropoff_location" class="form-control" required>
        </fieldset>
      </div>
    </div>
    <input type="submit" value="Click to Submit">
  </form>
  <footer>

  </footer>
</body>
</html>