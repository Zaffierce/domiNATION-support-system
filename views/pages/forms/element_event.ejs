<%- include('../../partials/head.ejs'); %>
  <title>User: <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
<script src="/js/app.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
<body>
  <%- include('../../partials/nav.ejs'); %>
  <br>
  <div class="container">
    <h1 class="ng-scope text-center">Element from an Event</h1>
    <form class="needs-validation" novalidate action="ticket-submit" method="POST">
      <%- include('../../partials/completedGeneralTicket.ejs'); %>
    <div class="form-group col-md-6" hidden>
      <select name="ticketType" class="form-control" id="generalTicketSelect" required>
        <option value="<%= generalInfo.ticketType %>"></option>
      </select>
    </div>
      <div class="form-row">
        <div class="form-group col-md-3"></div>
        <div class="form-group col-md-6">
            <label for="event_name">Which Event did you attend?</label>
            <input type="text" name="event_name" class="form-control" required>
  
            <label for="serverid_dropoff">Which server do you want the element on?</label>
            <select name="serverid_dropoff" class="form-control" id="server_dropoff" required>

            <%- include('../../partials/serverList.ejs'); %>

            </select>
            <label for="patreon">
              Are you Patreon?
              <a tabindex="0" 
              data-toggle="popover" 
              data-trigger="focus"
              data-html="true" 
              title="Incorrect option?" 
              data-content="This box is automatically populated based on the roles you have assigned to your Discord account in the DomiNATION server.  If this is the incorrect option, please ensure that you've signed into the correct account.">
              <i class="fas fa-info-circle"></i>
              </a>
            </label>
            <% if (user.isPatreon == true) { %>
            <input type="text" name="patreon" class="form-control" value="Yes" readonly>
            <% } else { %>
            <input type="text" name="patreon" class="form-control" value="No" readonly>
            <% } %>
          </fieldset>
        </div>
        <div class="form-group col-md-3"></div>
      </div>
      <div class="text-center">
        <input type="submit" value="Submit Ticket">
      </div>
    </form>

  </div>
</body>
</html>