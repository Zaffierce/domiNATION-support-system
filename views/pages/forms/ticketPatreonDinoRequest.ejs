<%- include('../../partials/head.ejs'); %>
  <title>Submit a new Ticket : <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<%- include('../../partials/css.ejs'); %>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" type="text/javascript"></script>
<script src="/js/app.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../partials/nav.ejs'); %>
  <br>
  <br>
  <br>
  <form class="needs-validation" novalidate action="form_submit" method="POST">
    <%- include('../../partials/completedGeneralTicket.ejs'); %>
    <div class="form-row">
      <legend>Patreon Dino Request</legend>
      <div class="form-group col-md-12">
          <label for="patreonDinoServer">Which server do you want your dino on?</label>
          <select name="patreonDinoServer" class="form-control" id="patreonDinoServer" required>
          <%- include('../../partials/serverList.ejs'); %>
          </select>

          <label for="patreonDinoChoice">Please select what dino you would like</label>
          <select name="patreonDinoChoice" class="form-control" id="patreonDinoChoice" required>
            <%- include('../../partials/dinoList.ejs'); %>
          </select>

          <label for="patreonDinoColored">Do you want your dino colored?
            <div class="regions warning" hidden>***Warning:  This will result in your dinosaur being Spayed/Neutered.***</div>
          </label>
          <select name="patreonDinoColored" class="form-control" id="patreonDinoColored">
            <option value="no">No</option>
            <option value="yes">Yes</option>
          </select>

          <div class="regions form-row" hidden>
            <div class="form-group col-md-4">
              <label for="patreonDinoRegion0">Region 0:</label>
              <select name="patreonDinoRegion0" class="form-control" id="patreonDinoRegion0">
                <%- include('../../partials/dinoColors.ejs'); %>
              </select>
            </div>

            <div class="form-group col-md-4">
              <label for="patreonDinoRegion1">Region 1:</label>
              <select name="patreonDinoRegion1" class="form-control" id="patreonDinoRegion1">
                <%- include('../../partials/dinoColors.ejs'); %>
              </select>
            </div>

            <div class="form-group col-md-4">
              <label for="patreonDinoRegion2">Region 2:</label>
              <select name="patreonDinoRegion2" class="form-control" id="patreonDinoRegion2">
                <%- include('../../partials/dinoColors.ejs'); %>
              </select>
            </div>

            <div class="form-group col-md-4">
              <label for="patreonDinoRegion3">Region 3:</label>
              <select name="patreonDinoRegion3" class="form-control" id="patreonDinoRegion3">
                <%- include('../../partials/dinoColors.ejs'); %>
              </select>
            </div>

            <div class="form-group col-md-4">
              <label for="patreonDinoRegion4">Region 4:</label>
              <select name="patreonDinoRegion4" class="form-control" id="patreonDinoRegion4">
                <%- include('../../partials/dinoColors.ejs'); %>
              </select>
            </div>

            <div class="form-group col-md-4">
              <label for="patreonDinoRegion5">Region 5:</label>
              <select name="patreonDinoRegion5" class="form-control" id="patreonDinoRegion5">
                <%- include('../../partials/dinoColors.ejs'); %>
              </select>
            </div>
          </div>

          <label for="patreonDinoSex">Do you want a specific sex?</label>
          <select name="patreonDinoSex" class="form-control" id="patreonDinoSex">
            <option value="na">N/A</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>

          <label for="patreonDinoDropoff">Specific drop-off location & PIN code:</label>
          <input type="text" name="patreonDinoDropoff" class="form-control" required>

          <label for="patreonDinoEmail">Please provide your Patreon Email Address</label>
          <input type="text" name="patreonDinoEmail" class="form-control" required>
      </div>

    </div>
    <input type="submit" value="Click to Submit">
  </form>
  <footer>

  </footer>
</body>
</html>