<%- include('../../partials/head.ejs'); %>
  <title>Submit a new Ticket : <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<%- include('../../partials/css.ejs'); %>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" type="text/javascript"></script>
<script src="/js/app.js" type="text/javascript"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/css/bootstrapValidator.min.css" integrity="sha256-gBxd65TVOCRCDC48+AXN6hhg3I/fZqE/BnwgKwdzJG4=" crossorigin="anonymous" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.5.3/js/bootstrapValidator.min.js" integrity="sha256-PbFF1Mdg86urwOYXWNJPP4z5Ge9KLp6KXX1NURQY8Ho=" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../../partials/nav.ejs'); %>
  <br>
  <br>
  <br>
  <form class="needs-validation" novalidate action="form_initial" method="POST">
    <div class="form-row" hidden>
      <legend>General Information:</legend>
      <div class="form-group col-md-6">
        <label for="ign">What is your in-game name?</label>
        <input type="text" class="form-control" name="ign" value="<%= generalInfo.ign %>">
        <div class="invalid-feedback">Please enter a name.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="discordName">What is your discord name?</label>
        <input type="text" class="form-control" name="discordName" value="<%= user.username%>#<%=user.discriminator %>" readonly>
        <div class="invalid-feedback">Please enter a name.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="serverAssistance">Which server do you need assistance on?</label>
        <select name="serverAssistance" class="form-control" id="generalServerSelect">
        <option value="<%= generalInfo.serverAssistance %>"></option>
        </select>
        <div class="invalid-feedback">Please choose a server.</div>
      </div>
    </div>
    <div class="form-row">
      <legend></legend>
      <div class="form-group col-md-12">
        <div class="form-group col-md-12">
            <label for="ticketType">Which option are you requesting?</label>
            <select name="ticketType" class="form-control" id="generalTicketSelect" required>
              <option value="elementEvent">Element from an Event</option>
              <option value="elementTransfer">Transfer Element to another server</option>
            </select>
            <div class="invalid-feedback">Please choose a ticket type.</div>
          </div>
        </fieldset>
      </div>

    </div>
    <input type="submit" value="Click to Submit">
  </form>
  <footer>

  </footer>
</body>
</html>