<%- include('../partials/head.ejs'); %>
  <title>Submit a new Ticket : <%= user.username %> - DomiNATION Ark: Survival Evolved Community</title>
<%- include('../partials/css.ejs'); %>
<link rel="stylesheet" type="text/css" href="styles/forms.css">
</head>
<body>
  <%- include('../partials/nav.ejs'); %>
  

  <form class="needs-validation" novalidate>
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="validationCustom01">First name</label>
        <input type="text" class="form-control" id="validationCustom01" placeholder="First name" value="Mark" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <label for="validationCustom02">Last name</label>
        <input type="text" class="form-control" id="validationCustom02" placeholder="Last name" value="Otto" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <label for="validationCustomUsername">Username</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend">@</span>
          </div>
          <input type="text" class="form-control" id="validationCustomUsername" placeholder="Username" aria-describedby="inputGroupPrepend" required>
          <div class="invalid-feedback">
            Please choose a username.
          </div>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="validationCustom03">City</label>
        <input type="text" class="form-control" id="validationCustom03" placeholder="City" required>
        <div class="invalid-feedback">
          Please provide a valid city.
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <label for="validationCustom04">State</label>
        <input type="text" class="form-control" id="validationCustom04" placeholder="State" required>
        <div class="invalid-feedback">
          Please provide a valid state.
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <label for="validationCustom05">Zip</label>
        <input type="text" class="form-control" id="validationCustom05" placeholder="Zip" required>
        <div class="invalid-feedback">
          Please provide a valid zip.
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
        <label class="form-check-label" for="invalidCheck">
          Agree to terms and conditions
        </label>
        <div class="invalid-feedback">
          You must agree before submitting.
        </div>
      </div>
    </div>
    <button class="btn btn-primary" type="submit">Submit form</button>
  </form>


  
  
  <br>
  <br>
  <br>
  <form novalidate>
    <div class="form-row">
      <fieldset name="generalInfo" id="generalInfo" class="needs-validation">
      <legend>General Information:</legend>
      <div class="form-group col-md-6">
        <label for="ign">What is your in-game name?</label>
        <input type="text" class="form-control" name="ign" required>
        <div class="invalid-feedback">Please enter a name.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="discordName">What is your discord name?</label>
        <input type="text" class="form-control" name="discordName" value="<%= user.username %>" required>
        <div class="invalid-feedback">Please enter a name.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="serverAssistance">Which server do you need assistance on?</label>
        <select name="serverAssistance" class="form-control" id="generalServerSelect" required>
        <%- include('../partials/serverList.ejs'); %>
        </select>
        <div class="invalid-feedback">Please choose a server.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="ticketType">What do you need help with?</label>
        <select name="ticketType" class="form-control" id="generalTicketSelect" required>
          <option value="">Please choose...</option>
          <option value="ticketGeneral">General assistance</option>
          <option value="ticketElementChoice">Element Request</option>
          <option value="ticketPatreonChoice">Patreon Request</option>
          <option value="banAppeal">Ban Appeal</option>
          <option value="reportABug">Report a Bug</option>
        </select>
        <div class="invalid-feedback">Please choose a ticket type.</div>
      </div>
      <button class="btn" id="genBtn">Next</button>
      </fieldset>
    </div>

    <fieldset name="ticketGeneral" id="ticketGeneral">
      <legend>General Ticket:</legend>
      <label for="genTribeName">What is your tribe name?</label>
      <input type="text" name="genTribeName">
      <label for="genCoords">What is your approximate coordinates?  Please provide CCC location:</label>
      <input type="text" name="genCoords">
      <label for="genDesc">Please describe your issue</label>
      <textarea name="genDesc" rows="10" cols="30"></textarea>
      <label for="genSolution">What have you done to resolve this issue?</label>
      <textarea name="genSolution" rows="10" cols="30"></textarea>
    </fieldset>

    <fieldset name="ticketElementChoice" id="ticketElementChoice">
      <legend>Please choose which kind of ticket:</legend>
      <label for="elementChoice">Which kind of Element ticket would you like to submit?</label>
      <select name="eleTicketType">
        <option name="eventElement">Element from an Event</option>
        <option name="transferElement">Transfer Element</option>
      </select>
    </fieldset>

    <fieldset name="eleEvent" id="eleEvent">
      <legend>Element from an Event:</legend>
      <label for="eleEventName">Which event did you attend?</label>
      <input name="eleEventName" type="text">
      <label for="eleEventServer">Please choose a server...</label>
      <select name="eleEventServer">
        <%- include('../partials/serverList.ejs'); %>
      </select>
      <label for="elePatreon">Are you a patreon?</label>
      <input name="elePatreon" type="text">
      <label for="eleDropoff">Please provide a specific drop-off location and PIN code:</label>
      <input name="eleDropoff" type="text">
    </fieldset>

    <fieldset name="eleXfr" id="eleXfr">
      <legend>Transfer Element:</legend>
      <label for="eleXfrAmount">How much element do you wish to transfer?</label>
      <input type="numeric" name="eleXfrAmount">
      <label for="eleXfrServerFrom">Which server do you wish to transfer from?</label>
      <select name="eleXfrServerFrom">
        <%- include('../partials/serverList.ejs'); %>
      </select>
      <label for="eleXfrPickup">Specific pickup location & PIN code:</label>
      <input type="text" name="eleXfrPickup">
      <label for="eleXfrServerTo">Which server do you wish to transfer to?</label>
      <select name="eleXfrServerTo">
        <%- include('../partials/serverList.ejs'); %>
      </select>
      <label for="eleXfrDropoff">Specific pickup location & PIN code:</label>
      <input type="text" name="eleXfrDropoff">
    </fieldset>

    <!--Render this section only if the user is patreon?-->
    <fieldset name="ticketPatreonChoice" id="ticketPatreonChoice">
      <legend>Please choose which kind of ticket:</legend>
      <label for="patreonChoice">Which kind of Patreon ticket would you like to submit?</label>
      <select name="patTicketType">
        <option name="patDinoReq">Monthly Dino Request</option>
        <option name="patInsuranceReq">Dino Insurance</option>
      </select>
    </fieldset>

    <fieldset name="patDino" id="patDino">
      <legend>Monthly Patreon Dino Request:</legend>
      <label for="patDinoServer">Which server would you like your dino on?</label>
      <select name="patDinoServer">
        <%- include('../partials/serverList.ejs'); %>
      </select>
      <label for="patDinoChoice">Please select the dino you want</label>
      <select name="dinoChoice">
        <!--ton of options here-->
      </select>
      <label for="patDinoColored">Do you want the dino colored?</label>
      <!--Radial buttons for Y/N... render color options if Y?-->
      <label for="patDinoDropoff">Specific pickup location & PIN code:</label>
      <input type="text" name="patDinoDropoff">
      <label for="patDinoEmailAddress">Please provide your email address:</label>
      <input type="text" name="patDinoEmailAddress">
    </fieldset>

    <fieldset name="patInsurance" id="patInsurance">
      <legend>Dino Insurance Request</legend>
      <label for="patInsuranceDino">Please provide the link from the website of the dead dino:</label>
      <input type="text" name="patInsuranceDino">
      <label for="patInsuranceEmailAddress">Please provide your email address:</label>
      <input type="text" name="patInsuranceEmailAddress">
      <label for="patInsuranceMonth">If you know, please provide the month you claimed this in:</label>
      <input type="text" name="patInsuranceMonth">
      <label for="patInsuranceDeathDisc">Please give a brief description of how the dino died:</label>
      <input type="text" name="patInsuranceDeathDisc">
    </fieldset>

    <fieldset name="banAppeal" id="banAppeal">
      <legend>Ban Appeal</legend>
      <label for="banAppealSteamID">What is your Steam ID?</label>
      <input type="text" name="banAppealSteamID">
      <label for="banAppealEmailAddress">What is a good email address to contact you at?</label>
      <input type="text" name="banAppealEmailAddress">
      <label for="banAppealBannedReason">Why were you banned?</label>
      <input type="text" name="banAppealBannedReason">
      <label for="banAppealUnbannedReason">Why do you think your ban should be removed?</label>
      <input type="text" name="banAppealUnbannedReason">
    </fieldset>

    <fieldset name="reportABug" id="reportABug">
      <legend>Report a Bug</legend>
      <label for="reportABugIssue">Please tell us your issue:</label>
      <input type="text" name="reportABugIssue">
      <label for="reportABugRecreate">Are you able to recreate this?  If so, how?</label>
      <!--Radial button? with additional prompt if yes?-->
      <input type="text" name="reportABugRecreate">
      <label for="reportABugLostItems">Did you lose anything?</label>
      <!--Warning for "proof required"-->
      <input type="text" name="reportABugLostItems">
    </fieldset>
  </form>
  <footer>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" type="text/javascript"></script>
  <script src="/js/app.js" type="text/javascript"></script>
  </footer>
</body>
</html>