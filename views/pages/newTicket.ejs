<body>
  <%- include('../partials/nav.ejs'); %>
  <br>
  <br>
  <br>
  <form name="basicform" id="basicform">
    <div id="sf1" class="frm form-group">
      <fieldset>
        <legend>General Information</legend>
        <div class="form-group col-md-6">
          <label for="ign">What is your in-game name?</label>
          <input type="text" id="ign" name="ign" class="form-control" >
        </div>
        <div class="form-group col-md-6">
          <label for="discordName">What is your discord name?</label>
          <input type="text" class="form-control" name="discordName" value="<%= user.username %>#<%= user.discriminator %>">
        </div>
        <div class="form-group col-md-6">
          <label for="serverAssistance">Which server do you need assistance on?</label>
          <select name="serverAssistance" class="form-control" id="generalServerSelect" required>
          <%- include('../partials/serverList.ejs'); %>
          </select>
        </div>
        <div class="form-group col-md-6">
          <label for="ticketType">What do you need help with?</label>
          <select name="ticketType" class="form-control" id="generalTicketSelect" required>
            <option value="">Please choose...</option>
            <option value="ticketGeneral">General assistance</option>
            <option value="ticketElementChoice">Element Request</option>
            <option value="ticketPatreonChoice">Patreon Request</option>
            <option value="banAppeal">Ban Appeal</option>
            <option value="reportABug">Report a Bug</option>
          </select>
        </div>
      </fieldset>
    </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <!-- open1 is given in the class that is binded with the click event -->
            <button class="btn btn-primary open1" type="button">Next <span class="fa fa-arrow-right"></span></button> 
          </div>
        </div>
      </fieldset>
    </div>

    <div id="sf2" class="frm form-group">
      <fieldset>
        <legend>Step 2 of 3</legend>

        <div class="form-group">
          <label class="col-lg-2 control-label" for="uemail">Your Email: </label>
          <div class="col-lg-6">
            <input type="text" placeholder="Your Email" id="uemail" name="uemail" class="form-control" autocomplete="off">
          </div>
        </div>

        <div class="clearfix" style="height: 10px;clear: both;"></div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <!-- back2 unique class name  -->
            <button class="btn btn-warning back2" type="button"><span class="fa fa-arrow-left"></span> Back</button> 
            <!-- open2 unique class name -->
            <button class="btn btn-primary open2" type="button">Next <span class="fa fa-arrow-right"></span></button> 
          </div>
        </div>
    </fieldset>
    </div>

    <div id="sf3" class="frm form-group">
      <fieldset>
        <legend>Step 3 of 3</legend>

        <div class="form-group">
          <label class="col-md-6 control-label" for="upass1">Password: </label>
          <div class="col-md-6">
            <input type="password" placeholder="Your Password" id="upass1" name="upass1" class="form-control" autocomplete="off">
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-6 control-label" for="upass1">Confirm Password: </label>
          <div class="col-md-6">
            <input type="password" placeholder="Confirm Password" id="upass2" name="upass2" class="form-control" autocomplete="off">
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <!-- Unique class name -->
            <button class="btn btn-warning back3" type="button"><span class="fa fa-arrow-left"></span> Back</button> 
            <!-- Unique class name -->
            <button class="btn btn-primary open3" type="button">Submit </button> 
            <img src="spinner.gif" alt="" id="loader" style="display: none">
          </div>
        </div>
      </fieldset>
    </div>
  </form>

  
  </div>
<footer>

</footer>
</body>
</html>