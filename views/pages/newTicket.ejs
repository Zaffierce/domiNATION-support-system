    <div class="form-row" id="generalInfo">
      <legend>General Information:</legend>
      <div class="form-group col-md-6">
        <label for="ign">What is your in-game name?</label>
        <input type="text" class="form-control" name="ign" required>
        <div class="invalid-feedback">Please enter a name.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="discordName">What is your discord name?</label>
        <input type="text" class="form-control" name="discordName" value="<%= user.username %>" required>
        <div class="invalid-feedback">Please enter a name.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="serverAssistance">Which server do you need assistance on?</label>
        <select name="serverAssistance" class="form-control" id="generalServerSelect" required>
        <%- include('../partials/serverList.ejs'); %>
        </select>
        <div class="invalid-feedback">Please choose a server.</div>
      </div>
      <div class="form-group col-md-6">
        <label for="ticketType">What do you need help with?</label>
        <select name="ticketType" class="form-control" id="generalTicketSelect" required>
          <option value="">Please choose...</option>
          <option value="ticketGeneral">General assistance</option>
          <option value="ticketElementChoice">Element Request</option>
          <option value="ticketPatreonChoice">Patreon Request</option>
          <option value="banAppeal">Ban Appeal</option>
          <option value="reportABug">Report a Bug</option>
        </select>
        <div class="invalid-feedback">Please choose a ticket type.</div>
      </div>
      <button class="btn btn-primary" type="button" id="genBtn">Next</button>
    </div>

